{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-gcflags=all=-N -l",
                "-o", "${workspaceFolder}/cmd/__debug_bin",
                "${workspaceFolder}/cmd"
            ],
            "problemMatcher": ["$go"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "cleanup",
        },
        {
            "label": "codesign",
            "type": "shell",
            "command": "codesign",
            "args": [
                "--entitlements", "${workspaceFolder}/vz.entitlements",
                "-s",
                "-",
                "${workspaceFolder}/cmd/__debug_bin"],
            "dependsOn": "build",
        },
        {
            "label": "cleanup",
            "type": "shell",
            "command": "rm",
            "args": [
                "-Rf",
                "${workspaceFolder}/cmd/_CodeSignature",
                "${workspaceFolder}/cmd/__debug_bin"],
        }
    ],
  }